<html>
    <head>
        <meta charset="utf-8"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    </head>
    <body class="container">
        <%- include('../partials/cabecera.ejs') %>        
        <div class="row">
            <div class="col-md-4">
                <form id="myForm" action="agregar" method="post">
                    <div>
                        <label class="form-label">Codigo</label>
                        <input id="form-codigo" class="form-control" type="text" name="codigo" />
                    </div>
                    <div>
                        <label class="form-label">Nombre</label>
                        <input id="form-nombre" class="form-control" type="text" name="nombre" />
                    </div>
                    <div>
                        <label class="form-label">Edad</label>
                        <input id="form-edad" class="form-control" type="number" name="edad" />
                    </div>
                    <button id="but-agregar" type="button" class="btn btn-primary mt-2">Grabar</button>
                </form>

            </div>
        
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Nombre</th>
                            <th>Edad</th>
                        </tr>
                    </thead>
                    <tbody id="datos">
                        <%- body %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <div id="mensaje"  class="alert alert-danger alert-dismissible fade show"  style="display: none;">
             Error al llenar los datos.
            <button id="but-cerrar" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        

        <div class="card">
            <div class="card-body">
                <%- include('../partials/pie.ejs') %>
            </div>
        </div>
        
        <script src="../js/script.js"></script>
    </body>
</html>